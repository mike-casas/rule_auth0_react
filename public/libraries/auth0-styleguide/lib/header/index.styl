/*==========  Header  ==========*/

header.site-header
  z-index: 1000;
  background: transparent;
  font-size: 14px;
  position:static;
  padding: 20px 0 20px 0;

  &.header-fixed
    background: rgba(255,255,255,.8);
    position: fixed;

  a
    color: #333;

  li *
    -webkit-backface-visibility: hidden !important;

  .navbar-header
    float: none;

    +breakpoint("desktop")
      margin-right: 0;
      margin-left: 0;
      float: left;

  nav
    background: none;
    border: 0;
    margin: 0;

    li a
      padding: 15px 15px;

    li.active a
      background: none;
      color: black

    ul, li
      margin: 0;

    .navbar-brand
      font-weight: $font-weight-bold
      margin: 0;
      display: inline-block
      float: left
      font-size: 24px;
      margin-right: 20px;
      color: black;
      padding: 0 15px 0 18px;
      margin: 0;
      width: 120px;

      +breakpoint("desktop")
        padding: 0 15px 0 0;

      a
        background: url('data:image/svg+xml;base64,') center left no-repeat;
        background-size: 76%;
        width: 130px;
        height: 40px;
        display: block
        margin-top: 8px;
        background-size: 70%;
        padding: 20px 15px;

      img
        position: relative;
        height: 36px;
        // width: 114px;
        margin-right: 10px;
        top: 2px;
        display: none

      span
        display: none

  .navbar-default
    .navbar-collapse
      border-color: transparent;
      padding: 0;

      &.collapse
        display: none !important;

        &.in
          display: block !important;

        +breakpoint("desktop")
          display: block !important;

    .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:hover, .navbar-default .navbar-nav>.active>a:focus
      background: transparent;

    .navbar-nav>.open>a
      background: none;

    .navbar-nav
      float: none !important;

      &.navbar-right
        +breakpoint("desktop")
          float: right !important;

      &.navbar-left
        +breakpoint("desktop")
          float: left !important;


      > li
        float: none;

        +breakpoint("desktop")
          float: left;

  .navbar-toggle
    border: 0;
    display: block;

    +breakpoint("desktop")
      display: none;

    &:hover
      background: none;
      .icon-bar
        background: black;




  .btn-dro
    padding: 20px 15px;
    line-height: 20px;
    background: none;
    display: inline-block
    color: #777;

    cursor: pointer;
    &:hover
      color: #666;
    i
      position: relative;
      top: 1px;
      margin-left: 5px;
      width: 6px;
      display: inline-block
      font-size: 10px;

  .dropdown
    .dropdown-menu>.active>a, .dropdown-menu>.active>a:hover, .dropdown-menu>.active>a:focus
      background-color: none;

    .dropdown-menu
      background: #fff;
      transition: transform .1s cubic-bezier(.3, 0, 0, 1.3);
      display: block
      left: 0;
      border: 0;
      border-radius: 3px;
      border-bottom: 1px solid #f1f1f1;
      -webkit-transform: none;
      transform: none;

      +breakpoint("desktop")
        -webkit-transform: scale(.8) translateY(-10%);
        transform: scale(.8) translateY(-10%);
        pointer-events: none;
        opacity: 0;

        .divider
          margin: 8px 0;

      li > a
        padding: 10px 15px;
        line-height: 20px;

        +breakpoint("desktop")
          padding: 5px 20px;

        &:hover
          background: none;

          +breakpoint("desktop")
            background: #f1f1f1;

      ::after
        position: absolute;
        top: -6px;
        left: 26px;
        display: inline-block;
        border-right: 6px solid transparent;
        border-bottom: 6px solid #fff;
        border-left: 6px solid transparent;
        content: '';

      .divider
        background-color: rgba(0,0,0,.1)

    &.open
      .dropdown-menu
        opacity: 1;
        pointer-events: auto;
        -webkit-transform: none;
        transform: none;

  a.login
    color: #666
    border: 1px solid #f1f1f1;
    border-radius: 100px;
    margin-left: 10px;
    text-transform: uppercase
    letter-spacing: 1px;
    font-weight: $font-weight-bold
    padding: 0;
    line-height: 30px;
    display: inline-block
    padding-left: 15px;
    padding-right: 14px;
    margin-top: 12px;
    font-size: 12px;

    &:hover
      background: #f1f1f1;


  .navbar > .container .navbar-brand,
  .navbar > .container-fluid .navbar-brand
    +breakpoint("desktop")
      margin-left: 0;



/*==========  Header with dark background behind  ==========*/
@media screen and (min-width: 990px)

  .header-dark,
  .theme-dark
    header.site-header
      position:absolute;
      left: 0;
      right: 0;
      top: 0;
      border-bottom: 1px solid rgba(255,255,255,0.1);

      h1.navbar-brand
        a
          background-image: url('//cdn.auth0.com/styleguide/1.0.0/img/logo-grey-horizontal.png')

      .navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:hover, .navbar-default .navbar-nav>.active>a:focus
        color: white;

      .dropdown a
        color: #333;

      .navbar-default
        .navbar-nav>li>a
          color: #d0d2d3;

          &:hover
            color: #fff;
            background: none;

      nav li .btn-dro
        color: #d0d2d3;
        &:hover
          color: white;


      a.btn
        border-color: #fff;

      a.btn:hover
        border-color: #fff;
        color: #000;


  .site-header.navbar-fixed-top, .site-header.navbar-fixed-bottom
    background: #fff;
    position:fixed !important;
    right:0;
    left:0;
    z-index:1030;
    transform:translate3d(0,0,0);
    -webkit-transform:translate3d(0,0,0);
    background:rgba(255,255,255,0.9);

.navbar-header
  position: relative;

a.hiring
  background: #44C7F4;
  text-transform: uppercase;
  position: absolute;
  font-weight: $font-weight-bold;
  padding: 2px 8px 0 8px;
  border-radius: 3px;
  color: white !important;
  display: block !important;
  font-size: 11px;
  display: block;
  left: 120px;
  top: 17px;

  +breakpoint("desktop")
    left: -104px;

  &::after
    position: absolute;
    content: "";
    left: -4px;
    top: 6px;
    width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-right: 5px solid #44C7F4;
    border-left: 0;

    +breakpoint("desktop")
      left: auto;
      right: -4px;
      border-right: 0;
      border-left: 5px solid #44C7F4;

/*==========  Responsive  ==========*/

@media screen and (max-width: 990px)

  header.site-header
    position: static
    text-align: left;
    padding: 10px 0;

    .navbar-left
      border-top: 1px solid #f1f1f1;

    li
      padding: 8px 0;
      border-bottom: 1px solid #f1f1f1;

      &:last-child
        border-bottom: 0;

      a
        display: block

    li.dropdown
      display: block
      padding: 0;
      opacity: 1;
      overflow: hidden

      .btn-dro
        display: none

      .divider
        display: none

      ul.dropdown-menu
        min-width: 0;
        position: static;
        margin: 0;
        box-shadow: none
        border-left: 4px solid #ccc;
        opacity: 1;
        transform: none;
        transition: none;
        border-radius: 0;
        margin: 0;
        padding: 0;
        width: 100%;
        background: #f8f8f8;
        pointer-events: all;
        li:last-child
          border-bottom: 0;

    nav

      a.login
        margin-bottom: 20px;
        font-size: 14px;
        padding: 10px;
        display: block
        text-align: center
